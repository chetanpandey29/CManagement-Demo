        <div class="col-md-12">
            <h4 class="form-h4">Student details</h4>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.SRNo, new { @class = "col-md-6 control-label" })

                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.SRNo, new { @class = "form-control", placeholder = "Scholar Number", value = "1" })
                    @Html.ValidationMessageFor(m => m.SRNo)
                </div>
            </div>
        </div>


        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.AdmissionDate, new { @class = "col-md-6 control-label" })
