@model CentralAcademy.MyModels.StudentModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section PageHeader{
    Add New Student
}


@if (!string.IsNullOrWhiteSpace(Request.QueryString["Save"]))
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success">
                <b>Registration Successful. Scholar Number <i>@Request.QueryString["Save"]</i></b>
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-@ViewBag.MessageClass">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm("Add", "Student", FormMethod.Post, new { @class = "form-horizontal" }))
{
