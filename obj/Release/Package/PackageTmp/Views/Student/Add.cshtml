                    @Html.TextBoxFor(m => m.AdmissionDate, "{0:dd-MM-yyyy}", new { @class = "form-control", placeholder = "dd-mm-yyyy", data_val = "true", data_val_regex = "Invalid date format", data_val_regex_pattern = @"^(0[1-9]|[12][0-9]|3[01])[- /.](0[1-9]|1[012])[- /.](19|20)\d\d$" })
                    @Html.ValidationMessageFor(m => m.AdmissionDate)
                    <script>
                        $('input[name="AdmissionDate"]').val('@DateTime.Now.ToString("dd-MM-yyyy")');
                    </script>
                </div>
            </div>
        </div>
        <div class="col-md-4">
