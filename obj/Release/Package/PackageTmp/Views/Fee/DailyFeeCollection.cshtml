@model CentralAcademy.MyModels.DailyFeeCollectionModel

@{
    ViewBag.Title = "Daily Fee Collection";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section PageHeader{
    Daily Fee Collection Report
}

@using (Html.BeginForm("DailyFeeCollection", "Fee", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-md-12">
            <h4 class="form-h4">Please provide Start & End date</h4>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.startDate, new { @class = "control-label col-md-6" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.startDate, new { @class = "form-control", data_val = "false", placeholder = "dd-mm-yyyy" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.endDate, new { @class = "control-label col-md-6" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.endDate, new { @class = "form-control", data_val = "false", placeholder = "dd-mm-yyyy" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" style="text-align:center;">
            <input type="submit" style="margin-top:30px;" class="btn btn-success btn-lg" value="Export all Records to Excel" />
        </div>
    </div>
}