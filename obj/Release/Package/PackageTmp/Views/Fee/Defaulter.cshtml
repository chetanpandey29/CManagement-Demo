@{
    ViewBag.Title = "Defaulter Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section PageHeader{
    Defaulter Search
}

@using (Ajax.BeginForm("_Defaulter", "Fee", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "searchResult", LoadingElementId = "loader" }, new { @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-6">Select Session</label>
                <div class="col-md-6">
                    @Html.DropDownList("session", new SelectList(new[] { "", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020" }), new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-6">Instalment Not Deposit</label>
                <div class="col-md-6">
                    @Html.DropDownList("instalment", new SelectList(new[] { "1", "2", "3", "4", "5", "6" }), new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-6">Class</label>
                <div class="col-md-6">
                    @Html.DropDownList(
                        "class", new SelectListItem[]
                        {
                            new SelectListItem() { Text = ""},
                            new SelectListItem() { Text = "NUR"},
                            new SelectListItem() { Text="KG"},
                            new SelectListItem() { Text="Prep"},
                            new SelectListItem() { Text="1st", Value = "1"},
                            new SelectListItem() { Text="2nd", Value = "2"},
                            new SelectListItem() { Text="3rd", Value = "3"},
                            new SelectListItem() { Text="4th", Value= "4"},
                            new SelectListItem() { Text="5th", Value = "5"},
                            new SelectListItem() { Text="6th", Value = "6"},
                            new SelectListItem() { Text="7th", Value = "7"},
                            new SelectListItem() { Text="8th", Value = "8"},
                            new SelectListItem() { Text="9th", Value = "9"},
                            new SelectListItem() { Text="10th", Value = "10"},
                            new SelectListItem() { Text="11th", Value = "11"},
                            new SelectListItem() { Text="12th", Value = "12"},
                        }, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-6">Section</label>
                <div class="col-md-6">
                    @Html.DropDownList("section", new SelectList(new[] { "", "A", "B", "C", "D", "E", "F", "G", "NEW" }), new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" style="text-align:center;">
            <input type="submit" style="margin-top:30px;" class="btn btn-success" value="Search" />
            <input type="reset" style="margin-top:30px;" class="btn btn-default" value="Reset" />
        </div>
    </div>
    <div id="loader" class="row" style="display:none;">
        <div class="col-md-12" style="text-align:center;">
            <img style="margin-top:40px;" src="~/Content/495.GIF" />
        </div>
    </div>
}

<div id="searchResult" style="margin-top:20px;">

</div>

