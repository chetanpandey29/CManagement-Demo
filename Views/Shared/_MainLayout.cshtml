<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")" style="margin:0;"><img style="margin-right:10px;margin-bottom:0px; margin-top:-5px; height:20px; width:auto;" src="~/Resource/30_37logo.png" />Central Academy</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Student <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Registration", "Add", "Student")</li>
                            <li>@Html.ActionLink("Search By Scholar No", "Search", "Student")</li>
                            <li>@Html.ActionLink("Advance Search", "AdvanceSearch", "Student")</li>
                            <li>@Html.ActionLink("Student Relation", "AddRelation", "Student")</li>
                            <li>@Html.ActionLink("Export", "GetAllStudent", "Student")</li>
                            <li>@Html.ActionLink("Database Backup", "GenerateBackup", "Home")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Transport <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Register Vehicle", "TransportDetail", "Transport")</li>
                            <li>@Html.ActionLink("Allocation", "Allocation", "Transport")</li>
                            <li>@Html.ActionLink("Advance Search", "AdvanceSearch", "Transport")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Fee <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Fee Deposit", "Deposit", "Fee")</li>
                            <li>@Html.ActionLink("Fee Update", "Update", "Fee")</li>
                            <li>@Html.ActionLink("Fee Structure", "FeeStructure", "Fee")</li>
                            <li>@Html.ActionLink("Print Receipt", "GetReceipt", "Fee")</li>
                            <li>@Html.ActionLink("Daily Fee Collection", "DailyFeeCollection", "Fee")</li>
                            <li>@Html.ActionLink("Defaulter Search", "Defaulter", "Fee")</li>
                        </ul>
                    </li>
                    @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reporting <b class="caret"></b></a>
                        <ul class="dropdown-menu">
