                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sign out", "SignOut", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="page-header">
                            <h2>@RenderSection("PageHeader")</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="padding:5px; background-color:#eee; position:fixed; bottom:0; width:100%; font-size:90%">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    &copy; 2016 - Central Academy School - Vikas Nagar
                </div>
                <div id="Developed By" class="col-md-8">

                </div>
            </div>
        </div>
    </div>
    <script>
        $('#ourContent').load('http://www.myignou.com/We/ForCAS');
    </script>
</body>
</html>

